# DORA Compliance System - Environment Configuration
# Copy this file to .env and update with your actual values

# AI MODEL API KEYS (At least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# APPLICATION CONFIGURATION
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# SERVER CONFIGURATION
HOST=0.0.0.0
PORT=5001
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=uploads

# DATABASE (Optional for demo)
DATABASE_URL=postgresql://user:password@localhost:5432/dora_compliance
REDIS_URL=redis://localhost:6379/0

# NOTES:
# 1. Replace "your_*_here" with actual credentials
# 2. Minimum required: One AI API key
# 3. Databases optional for demo mode
